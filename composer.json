{
    "name": "rah/rah_beacon",
    "description": "Create dynamic alias templates tags from Textpattern CMS' form partials",
    "keywords": ["textpattern", "plugin", "template", "tag"],
    "homepage": "https://github.com/gocom/rah_beacon",
    "license": "GPL-2.0",
    "type": "textpattern-plugin",
    "authors": [
        {
            "name": "Jukka Svahn",
            "homepage": "https://github.com/gocom",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/gocom/rah_beacon/issues",
        "source": "https://github.com/gocom/rah_beacon"
    },
    "require": {
        "php": ">=5.6.0",
        "textpattern/lock": ">=4.6.0",
        "textpattern/installer": "*"
    },
    "require-dev": {
        "rah/mtxpc": "^0.9.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "lint": "./vendor/bin/phpcs",
        "lint-fix": "./vendor/bin/phpcbf",
        "compile": "mtxpc --outdir=dist/ -c . && mtxpc --outdir=dist/ ."
    },
    "config": {
        "allow-plugins": {
            "textpattern/installer": true
        }
    },
    "abandoned": true
}
